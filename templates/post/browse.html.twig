{% extends 'base.html.twig' %}

{% block body %}

<div class="col-md-9">
  <div class="col-md-12 page-body">
    <div class="row">

  
      <div class="sub-title">
        <h2>The dog's blog</h2>
          <a href="contact.html"><i class="icon-envelope"></i></a>
      </div>
      
  
      <div class="col-md-12 content-page">
        <!-- Blog Post Start -->
        {% for post in posts %}
        <div class="col-md-12 blog-post">
            <div class="post-title">
              <a href="{{ path('post_read', {'id': post.id}) }}"><h1>{{ post.title }}</h1></a>
            </div>  
            <div class="post-info">
              <span>{{ post.createdAt|date('d M Y') }} / by <a href="#" target="_blank">
              
                {{ post.author.firstname }} {{ post.author.lastname }}
              </a></span>
            </div>  
            <p>{{ post.body|slice(0,250) }}&hellip;</p>                          			
            <a href="{{ path('post_read', {'id': post.id}) }}" class="button button-style button-anim fa fa-long-arrow-right"><span>Read more</span></a>
        </div>
        {% endfor %}
        <!-- Blog Post End -->

        <div class="col-md-12 text-center">
            <a href="javascript:void(0)" id="load-more-post" class="load-more-button">Load</a>
            <div id="post-end-message"></div>
        </div>
      </div>
      
    </div>
  </div>


{% endblock %}
